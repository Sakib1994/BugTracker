@model BugTracker.Models.Project

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Project</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Deadline)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Deadline)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Progress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Progress)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProjectManager)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProjectManager.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProjectMembers)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Id
                        </th>
                        <th>
                            Progress
                        </th>
                        <th>
                            Tusk
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ProjectMembers)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Progress)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Tusk)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
